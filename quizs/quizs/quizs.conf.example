[logging]
level = INFO

[db_conf]
host = localhost
port = 5432
database = quizs
user = quizs
password = quizs

[db_conf_eva]
host = localhost
database = test_eva
user = tester
password = password

[db_pool_conf]
min_size = 10
max_size = 20

# Reserved for future.
# async = False

[mem_conf]
path = /tmp/caches

[dispatcher]
tracker_max_interval = 60

[resolver]
no_subsearch_commands = foreach,appendpipe
macros_dir = /opt/otp/macros/

[static]
use_nginx = True
base_url = cache/{}
static_path = /opt/otp/static/

[user]
check_index_access = False
